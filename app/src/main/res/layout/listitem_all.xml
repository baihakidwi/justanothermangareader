<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_itemmargin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgv_listitem_imagethumbnail"
        android:layout_width="@dimen/hsize_listitem_imagesize"
        android:layout_height="@dimen/vsize_listitem_imagesize"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_all_imagemargin" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_listitem_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="manga title"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txv_listitem_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:text="detail"
            android:textAlignment="textStart" />
    </LinearLayout>

</LinearLayout>